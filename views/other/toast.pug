<div aria-live="polite" aria-atomic="true">
  <div id="error" class="toast" style="position: absolute; top: 0; right: 0; background: rgb(250, 157, 157)">
    <div class="toast-header">
      <strong class="mr-auto">Произошла ошибка</strong>
      <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="toast-body" id="err-text">
    </div>
  </div>

  <div id="sucess" class="toast" style="position: absolute; top: 0; right: 0; background: rgb(123, 211, 137)">
    <div class="toast-header">
      <strong class="mr-auto">Операция выполнена упешно</strong>
      <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="toast-body" id="scs-text">
    </div>
  </div>
</div>

