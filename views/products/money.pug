<div class="row blc-money">
  <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 col-xl-8 list-money">
    each row_money in all_money
      <div class="custom-control custom-switch">
        <br>
        <input type="checkbox" value="#{row_money.name}" class="custom-control-input" id="money_#{row_money.id}">
        <label class="custom-control-label" for="money_#{row_money.id}">#{row_money.name}</label>
      </div>
  </div>
  <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 col-xl-4">
    <div class="row blc-money-add">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
        <span class="desc-inf">Добавление нового</span>
      </div>
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
        <label for="name-money-new" class="text-primary">Наименование</label>
        <input class="form-control form-control-sm" type="text" id="name-money-new">
      </div>
      
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 text-right">
        <button type="button" class="btn btn-primary btn-sm" id="add-money-new">Добавить</button>
      </div>
    </div>
  </div>
</div>